{
  "name": "@forager/cli",
  "version": "0.4.6",

  "tasks": {
    "compile":            "deno task 'compile:os:*'",
    "compile:os:linux":   "deno compile          -P      --check --output=$INIT_CWD/releases/binaries/forager-x86_64-unknown-linux-gnu --target=x86_64-unknown-linux-gnu src/cli.ts",
    "compile:os:macos":   "deno compile          -P      --check --output=$INIT_CWD/releases/binaries/forager-aarch64-apple-darwin --target=aarch64-apple-darwin src/cli.ts",
    "compile:os:windows": "deno compile          -P      --check --output=$INIT_CWD/releases/binaries/forager-x86_64-pc-windows-msvc --target=x86_64-pc-windows-msvc src/cli.ts",
    "install":            "deno install --global -P      --check --name forager-cli --force src/cli.ts",
    "develop":            "deno run              -P      --check --env-file=../../.env src/cli.ts",
    "develop:watch":      "deno run      --watch -P      --check src/cli.ts",
    "test":               "deno test             -P=test --check --trace-leaks test",
    "test:watch":         "deno test     --watch -P=test --check --trace-leaks src"
  },

  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.4"
  },

  "exports": "./src/cli.ts",

  "permissions": {
    "default": {
      "run": ["ffmpeg", "ffprobe"],
      "write": true,
      "read": true,
      "env": ["HOME", "NODE_ENV", "FORAGER_CONFIG"],
      "net": ["127.0.0.1:8000"]
    },
    "test": {
      "run": ["deno"],
      "write": true,
      "read": true,
      "env": true
    }
  },

  "license": "MIT"
}
