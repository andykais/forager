{
  "name": "forager",
  "version": "0.2.1",
  "description": "",
  "type": "commonjs",
  "main": "index.js",
  "bin": {
    "forager": "cli.js"
  },
  "scripts": {
    "build": "tsc && cp package.json build/src",
    "build:watch": "mkdir -p build/src && cp package.json build/src && tsc --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "ava test/**/*test.ts",
    "test:migrations": "ava test/migrations/*test.ts",
    "test:watch": "ava test/**/*test.ts --watch"
  },
  "keywords": [],
  "author": "Andrew Kaiser",
  "license": "MIT",
  "dependencies": {
    "arg": "^5.0.1",
    "better-sqlite3": "^7.4.3",
    "date-fns": "^2.23.0",
    "sharp": "^0.28.3",
    "zod": "^3.8.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.4.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^15.14.2",
    "@types/sharp": "^0.28.5",
    "@types/tap": "^15.0.5",
    "@types/tape": "^4.13.2",
    "ava": "^3.15.0",
    "jest": "^27.2.4",
    "mocha": "^8.4.0",
    "source-map-support": "^0.5.19",
    "tap": "^15.0.10",
    "tape": "^5.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.5.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "ignoredByWatcher": [
      "scratchwork/*",
      "test/fixtures/*"
    ]
  }
}
